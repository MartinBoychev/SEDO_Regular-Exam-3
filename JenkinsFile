pipeline {
    agent any

    triggers {
         pollSCM('H/5 * * * *')
    }

    stages {
        stage('Build .NET Project') {
            steps {
                bat 'dotnet build'
            }
        }

        }

        stage('Test Integration Tests') {
            steps {
                // Run integration tests
                bat 'dotnet test --no-build --verbosity normal'
            }
        }
    }

